    </Label>


    <AnchorPane layoutX="50.0" layoutY="100.0" prefHeight="450.0" prefWidth="700.0" style="-fx-background-color: rgba(255, 255, 255, 0.9); -fx-background-radius: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10, 0, 0, 5);">


        <Button fx:id="browseJobsButton" layoutX="116.0" layoutY="93.0" onAction="#handleBrowseJobs" prefHeight="40.0" prefWidth="224.0" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-background-radius: 10; -fx-font-weight: bold;" text="Browse Jobs" />

        <Button fx:id="submitProposalButton" layoutX="116.0" layoutY="143.0" onAction="#handleSubmitProposal" prefHeight="40.0" prefWidth="224.0" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-background-radius: 10; -fx-font-weight: bold;" text="Submit Proposal" />

