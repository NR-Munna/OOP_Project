        <Button fx:id="communicateButton" layoutX="116.0" layoutY="243.0" onAction="#handleCommunicate" prefHeight="40.0" prefWidth="224.0" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-background-radius: 10; -fx-font-weight: bold;" text="Communicate" />


