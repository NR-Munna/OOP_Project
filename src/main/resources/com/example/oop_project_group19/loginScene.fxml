<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="700.0" style="-fx-background-color: linear-gradient(to bottom, rgba(74, 144, 226, 0.8), rgba(80, 227, 194, 0.6));" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.oop_project_group19.LoginSceneController">


    <AnchorPane layoutX="215.0" layoutY="64.0" prefHeight="420.0" prefWidth="331.0" style="-fx-background-color: rgba(255, 255, 255, 0.9); -fx-background-radius: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10, 0, 0, 5);">


        <Label layoutX="38.0" layoutY="14.0" prefHeight="35.0" prefWidth="222.0" text="             Login" textFill="#2c3e50">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>

        <!-- Subtitle -->
        <Label layoutX="87.0" layoutY="49.0" text="Access Your Dashboard" textFill="#7f8c8d">
            <font>
                <Font size="14.0" />
            </font>
        </Label>

        <!-- Username Label -->
        <Label layoutX="45.0" layoutY="78.0" text="User ID:" textFill="#34495e">
            <font>
                <Font name="System Bold" size="12.0" />
            </font>
        </Label>


        <TextField fx:id="useridField" layoutX="46.0" layoutY="95.0" prefHeight="35.0" prefWidth="240.0" promptText="Enter your id" style="-fx-background-color: white; -fx-border-color: #bdc3c7; -fx-border-radius: 5; -fx-background-radius: 5;" />


        <Label layoutX="47.0" layoutY="210.0" text="Password:" textFill="#34495e">
            <font>
                <Font name="System Bold" size="12.0" />
            </font>
        </Label>

        <PasswordField fx:id="passwordField" layoutX="46.0" layoutY="230.0" prefHeight="35.0" prefWidth="240.0" promptText="Enter your password" style="-fx-background-color: white; -fx-border-color: #bdc3c7; -fx-border-radius: 5; -fx-background-radius: 5;" />


        <Label layoutX="45.0" layoutY="276.0" text="User Type:" textFill="#34495e">
            <font>
                <Font name="System Bold" size="12.0" />
            </font>
        </Label>

        <ComboBox fx:id="userTypeComboBox" layoutX="46.0" layoutY="293.0" prefHeight="35.0" prefWidth="240.0" promptText="Select user type" style="-fx-background-color: white; -fx-border-color: #bdc3c7; -fx-border-radius: 5; -fx-background-radius: 5;" />


        <Button fx:id="loginButton" layoutX="40.0" layoutY="359.0" mnemonicParsing="false" onAction="#loginbuttonOnClicked" prefHeight="40.0" prefWidth="240.0" style="-fx-background-color: #3498db; -fx-background-radius: 20; -fx-font-weight: bold; -fx-font-size: 14px;" text="LOGIN" textFill="white">
            <font>
                <Font name="System Bold" size="14.0" />
            </font>
        </Button>
      <TextField fx:id="useremailField" layoutX="46.0" layoutY="160.0" prefHeight="35.0" prefWidth="240.0" promptText="Enter your email" style="-fx-background-color: white; -fx-border-color: #bdc3c7; -fx-border-radius: 5; -fx-background-radius: 5;" />
      <Label layoutX="45.0" layoutY="138.0" text="Email:" textFill="#34495e">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Label>
    </AnchorPane>

    <Label layoutX="290.0" layoutY="14.0" text="FreelanceHub" textFill="white">
        <font>
            <Font name="System Bold" size="28.0" />
        </font>
    </Label>


    <Label layoutX="277.0" layoutY="44.0" text="Professional Freelancing Platform" textFill="rgba(255, 255, 255, 0.8)">
        <font>
            <Font size="14.0" />
        </font>
    </Label>


    <Label fx:id="statusLabel" layoutX="200.0" layoutY="460.0" prefWidth="300.0" textAlignment="CENTER" textFill="#e74c3c">
        <font>
            <Font size="12.0" />
        </font>
    </Label>
</AnchorPane>
