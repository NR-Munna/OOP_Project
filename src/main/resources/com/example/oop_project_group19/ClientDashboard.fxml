<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: linear-gradient(to bottom, rgba(74, 144, 226, 0.8), rgba(80, 227, 194, 0.6));" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.oop_project_group19.ClientDashboardController">


    <Label layoutX="300.0" layoutY="20.0" text="Client Dashboard">
        <font>
            <Font name="System Bold" size="28.0" />
        </font>
    </Label>


    <AnchorPane layoutX="50.0" layoutY="88.0" prefHeight="450.0" prefWidth="700.0" style="-fx-background-color: rgba(255, 255, 255, 0.9); -fx-background-radius: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10, 0, 0, 5);">


        <Button fx:id="postJobButton" layoutX="113.0" layoutY="71.0" onAction="#handlePostJob" prefHeight="40.0" prefWidth="188.0" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-background-radius: 10; -fx-font-weight: bold;" text="Post New Job" />

        <Button fx:id="viewProposalsButton" layoutX="113.0" layoutY="131.0" onAction="#handleViewProposals" prefHeight="40.0" prefWidth="188.0" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-background-radius: 10; -fx-font-weight: bold;" text="View Proposals" />

        <Button fx:id="hireFreelancerButton" layoutX="113.0" layoutY="191.0" onAction="#handleHireFreelancer" prefHeight="40.0" prefWidth="188.0" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-background-radius: 10; -fx-font-weight: bold;" text="Hire Freelancer" />

        <Button fx:id="chatButton" layoutX="113.0" layoutY="261.0" onAction="#handleChat" prefHeight="35.0" prefWidth="188.0" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-background-radius: 10; -fx-font-weight: bold;" text="Chat with Freelancer" />

        <Button fx:id="reviewWorkButton" layoutX="398.0" layoutY="71.0" onAction="#handleReviewWork" prefHeight="40.0" prefWidth="188.0" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-background-radius: 10; -fx-font-weight: bold;" text="Review Submitted Work" />

        <Button fx:id="approvePaymentButton" layoutX="398.0" layoutY="131.0" onAction="#handleApprovePayment" prefHeight="40.0" prefWidth="188.0" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-background-radius: 10; -fx-font-weight: bold;" text="Approve Payment" />

        <Button fx:id="provideFeedbackButton" layoutX="398.0" layoutY="191.0" onAction="#handleProvideFeedback" prefHeight="40.0" prefWidth="188.0" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-background-radius: 10; -fx-font-weight: bold;" text="Provide Feedback" />

        <Button fx:id="viewHistoryButton" layoutX="398.0" layoutY="259.0" onAction="#handleViewHistory" prefHeight="40.0" prefWidth="188.0" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-background-radius: 10; -fx-font-weight: bold;" text="View Project History" />
    </AnchorPane>


    <Label fx:id="statusLabel" layoutX="50.0" layoutY="570.0" prefWidth="700.0" textAlignment="CENTER" textFill="white">
        <font>
            <Font size="12.0" />
        </font>
    </Label>


     <Button fx:id="logoutButton" layoutX="668.0" layoutY="553.0" onAction="#handleLogout" prefHeight="35.0" prefWidth="90.0" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-background-radius: 10; -fx-font-weight: bold;" text="Logout" />
</AnchorPane>
