<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: linear-gradient(to bottom, rgba(74, 144, 226, 0.8), rgba(80, 227, 194, 0.6));" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.oop_project_group19.AdminDashboardController">


    <Label layoutX="281.0" layoutY="60.0" text="Admin Dashboard" textFill="white">
        <font>
            <Font name="System Bold" size="28.0" />
        </font>
    </Label>


    <AnchorPane layoutX="50.0" layoutY="100.0" prefHeight="450.0" prefWidth="700.0" style="-fx-background-color: rgba(255, 255, 255, 0.9); -fx-background-radius: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10, 0, 0, 5);">


        <Button fx:id="viewAllUsersButton" layoutX="120.0" layoutY="75.0" onAction="#handleViewAllUsers" prefHeight="40.0" prefWidth="220.0" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-background-radius: 10; -fx-font-weight: bold;" text="View All Users" />

        <Button fx:id="searchUsersButton" layoutX="120.0" layoutY="125.0" onAction="#handleSearchUsers" prefHeight="40.0" prefWidth="220.0" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-background-radius: 10; -fx-font-weight: bold;" text="Search Users" />

        <Button fx:id="viewUserDetailsButton" layoutX="120.0" layoutY="175.0" onAction="#handleViewUserDetails" prefHeight="40.0" prefWidth="220.0" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-background-radius: 10; -fx-font-weight: bold;" text="View User Details" />

        <Button fx:id="updateUserStatusButton" layoutX="120.0" layoutY="225.0" onAction="#handleUpdateUserStatus" prefHeight="40.0" prefWidth="220.0" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-background-radius: 10; -fx-font-weight: bold;" text="Update User Status" />


        <Button fx:id="viewAllProjectsButton" layoutX="360.0" layoutY="75.0" onAction="#handleViewAllProjects" prefHeight="40.0" prefWidth="220.0" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-background-radius: 10; -fx-font-weight: bold;" text="View All Projects" />

        <Button fx:id="generateReportsButton" layoutX="360.0" layoutY="125.0" onAction="#handleGenerateReports" prefHeight="40.0" prefWidth="220.0" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-background-radius: 10; -fx-font-weight: bold;" text="Generate Reports" />

        <Button fx:id="systemStatisticsButton" layoutX="360.0" layoutY="175.0" onAction="#handleSystemStatistics" prefHeight="40.0" prefWidth="220.0" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-background-radius: 10; -fx-font-weight: bold;" text="System Statistics" />

        <Button fx:id="exportUserDataButton" layoutX="360.0" layoutY="225.0" onAction="#handleExportUserData" prefHeight="40.0" prefWidth="220.0" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-background-radius: 10; -fx-font-weight: bold;" text="Export User Data" />


        <Button fx:id="logoutButton" layoutX="580.0" layoutY="349.0" onAction="#handleLogout" prefHeight="35.0" prefWidth="90.0" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-background-radius: 10; -fx-font-weight: bold;" text="Logout" />
    </AnchorPane>


    <Label fx:id="statusLabel" layoutX="50.0" layoutY="570.0" prefWidth="700.0" textAlignment="CENTER" textFill="white">
        <font>
            <Font size="12.0" />
        </font>
    </Label>
</AnchorPane>
