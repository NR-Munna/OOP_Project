<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="700.0" prefWidth="900.0"
            style="-fx-background-color: linear-gradient(to bottom, #667eea, #764ba2);"
            xmlns="http://javafx.com/javafx/23"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.oop_project_group19.ReviewerDashboardController">

    <children>
        <Label layoutX="280.0" layoutY="30.0" text="Reviewer Dashboard" textFill="WHITE">
            <font>
                <Font name="System Bold" size="28.0"/>
            </font>
        </Label>

        <Button fx:id="checkMilestoneButton" layoutX="150.0" layoutY="150.0" text="Check Milestone"
                onAction="#handleCheckMilestone"
                prefHeight="50.0" prefWidth="200.0"
                style="-fx-background-color: #4facfe; -fx-background-radius: 10; -fx-text-fill: white;">
            <font><Font name="System Bold" size="14.0"/></font>
        </Button>

        <Button fx:id="createReviewNoteButton" layoutX="550.0" layoutY="150.0" text="Create Review Note"
                onAction="#handleCreateReviewNote"
                prefHeight="50.0" prefWidth="200.0"
                style="-fx-background-color: #4facfe; -fx-background-radius: 10; -fx-text-fill: white;">
            <font><Font name="System Bold" size="14.0"/></font>
        </Button>

        <Button fx:id="generateWeeklySummaryButton" layoutX="150.0" layoutY="230.0" text="Generate Weekly Summary"
                onAction="#handleGenerateWeeklySummary"
                prefHeight="50.0" prefWidth="200.0"
                style="-fx-background-color: #4facfe; -fx-background-radius: 10; -fx-text-fill: white;">
            <font><Font name="System Bold" size="14.0"/></font>
        </Button>

        <Button fx:id="rateCompleteProjectButton" layoutX="550.0" layoutY="230.0" text="Rate Completed Project"
                onAction="#handleRateCompleteProject"
                prefHeight="50.0" prefWidth="200.0"
                style="-fx-background-color: #4facfe; -fx-background-radius: 10; -fx-text-fill: white;">
            <font><Font name="System Bold" size="14.0"/></font>
        </Button>

        <Button fx:id="reviewFreelancerButton" layoutX="150.0" layoutY="310.0" text="Review Freelancer"
                onAction="#handleReviewFreelancer"
                prefHeight="50.0" prefWidth="200.0"
                style="-fx-background-color: #4facfe; -fx-background-radius: 10; -fx-text-fill: white;">
            <font><Font name="System Bold" size="14.0"/></font>
        </Button>

        <Button fx:id="reviewProjectButton" layoutX="550.0" layoutY="310.0" text="Review Project"
                onAction="#handleReviewProject"
                prefHeight="50.0" prefWidth="200.0"
                style="-fx-background-color: #4facfe; -fx-background-radius: 10; -fx-text-fill: white;">
            <font><Font name="System Bold" size="14.0"/></font>
        </Button>

        <Button fx:id="sendWarningButton" layoutX="150.0" layoutY="390.0" text="Send Warning"
                onAction="#handleSendWarning"
                prefHeight="50.0" prefWidth="200.0"
                style="-fx-background-color: #4facfe; -fx-background-radius: 10; -fx-text-fill: white;">
            <font><Font name="System Bold" size="14.0"/></font>
        </Button>

        <Button fx:id="viewReviewHistoryButton" layoutX="550.0" layoutY="390.0" text="View Review History"
                onAction="#handleViewReviewHistory"
                prefHeight="50.0" prefWidth="200.0"
                style="-fx-background-color: #4facfe; -fx-background-radius: 10; -fx-text-fill: white;">
            <font><Font name="System Bold" size="14.0"/></font>
        </Button>

        <Button fx:id="logoutButton" layoutX="400.0" layoutY="500.0" text="Logout"
                onAction="#handleLogout"
                prefHeight="40.0" prefWidth="100.0"
                style="-fx-background-color: #ff6b6b; -fx-background-radius: 8; -fx-text-fill: white;">
            <font><Font name="System Bold" size="12.0"/></font>
        </Button>
    </children>
</AnchorPane>
