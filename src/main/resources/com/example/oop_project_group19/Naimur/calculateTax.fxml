<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="500.0" prefWidth="700.0" style="-fx-background-color: linear-gradient(to bottom, rgba(74,144,226,0.8), rgba(80,227,194,0.6));" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.oop_project_group19.Naimur.CalculateTaxController">

    <children>
        <Label layoutX="257.0" layoutY="36.0" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: white;" text="Calculate Tax Deductions" />

        <Label layoutX="150.0" layoutY="100.0" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: white;" text="Revenue Amount:" />

        <TextField fx:id="revenueField" layoutX="270.0" layoutY="96.0" prefWidth="200.0" promptText="Enter revenue amount" />

        <Label layoutX="150.0" layoutY="150.0" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: white;" text="Income Amount:" />

        <TextField fx:id="incomeField" layoutX="270.0" layoutY="146.0" prefWidth="200.0" promptText="Enter income amount" />

        <Label layoutX="150.0" layoutY="200.0" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: white;" text="Tax Percentage:" />

        <TextField fx:id="taxPercentageField" layoutX="270.0" layoutY="196.0" prefWidth="200.0" promptText="Enter tax percentage" />

        <Label layoutX="480.0" layoutY="200.0" style="-fx-text-fill: white;">
            <text>%</text>
        </Label>

        <Button fx:id="calculateTaxBtn" layoutX="300.0" layoutY="250.0" onAction="#onCalculateTax" prefWidth="120.0" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold;" text="Calculate Tax" />

        <Label layoutX="150.0" layoutY="320.0" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: white;" text="Tax Calculation Results:" />

        <Label layoutX="150.0" layoutY="360.0" style="-fx-text-fill: white;" text="Total Taxable Amount:" />

        <TextField fx:id="taxableAmountField" editable="false" layoutX="300.0" layoutY="356.0" prefWidth="150.0" style="-fx-background-color: #f0f0f0;" />

        <Label layoutX="150.0" layoutY="400.0" style="-fx-text-fill: white;" text="Total Tax Amount:" />

        <TextField fx:id="totalTaxField" editable="false" layoutX="300.0" layoutY="396.0" prefWidth="150.0" style="-fx-background-color: #f0f0f0;" />

        <Button fx:id="backBtn" layoutX="50.0" layoutY="450.0" onAction="#onBack" prefWidth="100.0" style="-fx-background-color: #f44336; -fx-text-fill: white;" text="Back" />

        <Button fx:id="clearBtn" layoutX="500.0" layoutY="450.0" onAction="#onClear" prefWidth="100.0" style="-fx-background-color: #FF9800; -fx-text-fill: white;" text="Clear" />
    </children>
</AnchorPane>
