<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="700.0" style="-fx-background-color: linear-gradient(to bottom, rgba(74, 144, 226, 0.8), rgba(80, 227, 194, 0.6))" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.oop_project_group19.FinanceOfficerDashboardController">
    <children>
        <Label layoutX="240.0" layoutY="30.0" text="Finance Officer Dashboard" textFill="WHITE">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>

        <Button fx:id="processInvoicesBtn" layoutX="100.0" layoutY="100.0" onAction="#onProcessInvoices" prefHeight="50.0" prefWidth="200.0" style="-fx-background-color: #ffffff; -fx-text-fill: #2c3e50; -fx-font-weight: bold;" text="Process Invoice Payments" />

        <Button fx:id="calculateTaxBtn" layoutX="400.0" layoutY="100.0" onAction="#onCalculateTax" prefHeight="50.0" prefWidth="200.0" style="-fx-background-color: #ffffff; -fx-text-fill: #2c3e50; -fx-font-weight: bold;" text="Calculate Tax Deductions" />

        <Button fx:id="generatePayStubsBtn" layoutX="100.0" layoutY="180.0" onAction="#onGeneratePayStubs" prefHeight="50.0" prefWidth="200.0" style="-fx-background-color: #ffffff; -fx-text-fill: #2c3e50; -fx-font-weight: bold;" text="Generate Pay Stubs" />

        <Button fx:id="trackExpensesBtn" layoutX="400.0" layoutY="180.0" onAction="#onTrackExpenses" prefHeight="50.0" prefWidth="200.0" style="-fx-background-color: #ffffff; -fx-text-fill: #2c3e50; -fx-font-weight: bold;" text="Track Expense Categories" />

        <Button fx:id="monitorCashFlowBtn" layoutX="100.0" layoutY="260.0" onAction="#onMonitorCashFlow" prefHeight="50.0" prefWidth="200.0" style="-fx-background-color: #ffffff; -fx-text-fill: #2c3e50; -fx-font-weight: bold;" text="Monitor Cash Flow" />

        <Button fx:id="handleRefundsBtn" layoutX="400.0" layoutY="260.0" onAction="#onHandleRefunds" prefHeight="50.0" prefWidth="200.0" style="-fx-background-color: #ffffff; -fx-text-fill: #2c3e50; -fx-font-weight: bold;" text="Handle Refund Requests" />

        <Button fx:id="createBudgetBtn" layoutX="100.0" layoutY="340.0" onAction="#onCreateBudget" prefHeight="50.0" prefWidth="200.0" style="-fx-background-color: #ffffff; -fx-text-fill: #2c3e50; -fx-font-weight: bold;" text="Create Budget Plans" />

        <Button fx:id="loanManagementBtn" layoutX="400.0" layoutY="340.0" onAction="#onLoanManagement" prefHeight="50.0" prefWidth="200.0" style="-fx-background-color: #ffffff; -fx-text-fill: #2c3e50; -fx-font-weight: bold;" text="Loan and Delay Management" />

        <Button fx:id="logoutBtn" layoutX="300.0" layoutY="450.0" onAction="#onLogout" prefHeight="40.0" prefWidth="100.0" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold;" text="Logout" />
    </children>
</AnchorPane>